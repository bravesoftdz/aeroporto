unit UFrmPrincipal;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, Menus
  , StdCtrls, ComCtrls
  ;

type
  TFrmPrincipal = class(TForm)
    mmPrincipal: TMainMenu;
    miSair: TMenuItem;
    sbPrincipal: TStatusBar;
    miCadastro: TMenuItem;
    miCidades: TMenuItem;
    procedure miSairClick(Sender: TObject);
    procedure FormShow(Sender: TObject);
    procedure miCidadesClick(Sender: TObject);
    procedure FormActivate(Sender: TObject);
  private
    { Private declaration }
  public
    { Public declarations }
  end;

var
  FrmPrincipal: TFrmPrincipal;

implementation

uses
    UDM
  , DB
  , UFrmCadastroCidade
  , UCidade
  , UAeroporto
  ;

{$R *.dfm}

procedure TFrmPrincipal.miCidadesClick(Sender: TObject);
begin
  Application.CreateForm(TFrmCadastroCidade, FrmCadastroCidade);
end;

procedure TFrmPrincipal.miSairClick(Sender: TObject);
begin
  Close;
end;

procedure TFrmPrincipal.FormActivate(Sender: TObject);
var
  meuAEROPORTO: TAEROPORTO;
  outroAEROPORTO: TAEROPORTO;
  minhaCIDADE: TCIDADE;
begin
  meuAEROPORTO := TAEROPORTO.Create;
  FreeAndNil(meuAEROPORTO);

  ShowMessage('Já detruiu');
  meuAEROPORTO.NOME             := 'Quero-Quero';
  meuAEROPORTO.TAMANHO_PISTA_KM := 1500;

  outroAEROPORTO := TAEROPORTO.Create;
  ShowMessage(IntToStr(outroAEROPORTO.ID));

  outroAEROPORTO.NOME             := 'Afonso Pena';
  outroAEROPORTO.TAMANHO_PISTA_KM := 2500;

  minhaCIDADE           := TCIDADE.Create;
  minhaCIDADE.NOME      := 'Blumenau';
  minhaCIDADE.POPULACAO := 300000;

  meuAEROPORTO.CIDADE   := minhaCIDADE;
  outroAEROPORTO.CIDADE := minhaCIDADE;


  //meuAEROPORTO.SENHA; Não compila porque o atributo senha é privado na classe TAeroporto
  ShowMessage(meuAEROPORTO.RetornaRepresentacaoTextual);

  minhaCIDADE.NOME := 'X';

  ShowMessage(outroAEROPORTO.RetornaRepresentacaoTextual);
end;

procedure TFrmPrincipal.FormShow(Sender: TObject);
begin
  sbPrincipal.Panels[0].Text :=
    'Banco de Dados: ' + dmProway.SQLConnection.Params.Values[CNT_DATA_BASE];
end;

end.
