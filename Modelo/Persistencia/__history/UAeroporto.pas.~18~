unit UAeroporto;

interface

uses
    UEntidade
  , UCidade
  ;

type
  TAEROPORTO = class(TENTIDADE)
  private
    function oi: Boolean;
  public
    NOME            : String;
    TAMANHO_PISTA_KM: Double;
    CIDADE          : TCIDADE;

    constructor Create;
    destructor Destroy; override;

    procedure FazAlgumaCoisa;

    function RetornaRepresentacaoTextual: String;
  end;

implementation

uses
    SysUtils
  ;

{ TAEROPORTO }

constructor TAEROPORTO.Create;
begin
  CIDADE := TCIDADE.Create;
end;

destructor TAEROPORTO.Destroy;
begin
  FreeAndNil(CIDADE);
end;

procedure TAEROPORTO.FazAlgumaCoisa;
begin

end;

function TAEROPORTO.oi: Boolean;
begin
  Result := False;
end;

function TAEROPORTO.RetornaRepresentacaoTextual: String;
begin
  Result := Format('Nome: %s, Tamanho Pista: %f, Cidade: %s',
    [
      NOME,
      TAMANHO_PISTA_KM,
      CIDADE.NOME
    ]);
end;

initialization
  TAEROPORTO.CONTROLE_ID := 500;

end.
